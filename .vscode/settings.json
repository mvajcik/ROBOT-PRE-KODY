{
    // Pytest zapnutý, ostatné vypnuté
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "-q",
        "tests"
    ],
    // Zobrazenie výsledkov v editore
    "testing.automaticallyOpenPeekView": "failureAnywhere",
    "testing.gutterEnabled": true,
    // Black pri uložení iba pre Python
    "editor.formatOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    // Pylance: ľahké typové kontroly
    "python.analysis.typeCheckingMode": "basic",
    // Istota, že sa hľadá v .venv v projekte
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "testExplorer.onSave": "test-file"
}
